<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/head'); %>

    <link href="/static/style/home.css" rel="stylesheet" type="text/css" />
  </head>
  <body class="center">
    <!-- add some space to the top e-->
    <br>

    <h1 class="title">HackermonDev</h1>
      
    <br>
    <div id="links">
      <% Object.keys(links).forEach(function(link){ %>
        <a href="<%= links[link] %>"><%= link %></a>
      <% }) %>
    </div>
  

    <!-- Add lots of spaces -->

    <br><br><br><br><br><br><br><br><br><br><br><br><br><br>

    <div id="projects">
      <h1 class="section-title">Projects:</h1>
      <!-- <hr/> -->

      <div id="projects-list">

        <% projects.forEach(function(project){ %>
          <div class="project">
            <a href="<%= project.url %>" rel="noopener" target="_blank">
              <%= project.name.toUpperCase() %>

              <img
                src="/static/images/languages/<%= project.language %>.svg"
                alt="<%= project.language %>"

                style="width: 20px; height: 20px; color: black;"
                class="small-logo"
              >
            </a>

            <p class="description"><%= project.description %></p>
          </div>
        <% }) %>
      </div>
    </div>




    <!-- Add lots of spaces -->

    <br><br><br><br><br><br><br><br><br><br><br><br>

    <div id="blogs">
      <h1 class="section-title">Blogs:</h1>
      <!-- <hr/> -->

      <div id="blogs-list">

        <% blogs.forEach(function(blog){ %>
          <div class="blog">
            <a href="/blog/<%= blog.slug %>" rel="noopener"><%= blog.title %></a>

            <p class="description"><%= blog.teaser %></p>
          </div>
        <% }) %>

        <%if (blogs.length == 0) { %>
          <p>No blogs :(</p>
        <% } %>
      </div>
    </div>

    <!-- Add lots of spaces -->

    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

    <%if (renderAnalytics == true) { %>
      <script src="/scripts/science.js"></script>

      <script>
        window.tracker = ackeeTracker.create(`https://<%= analytics.AckeeHost %>`, { ignoreLocalhost: true,detailed: true, ignoreOwnVisits: false })

        window.tracker.record('<%= analytics.AckeeID %>')
      </script>
    <% } %>
    
  </body>
</html>